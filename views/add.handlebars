    {{/if}}
    <input id="input-stream" type="text" placeholder="Enter New Streaming Service" name="addStream">
    <br>

    <!-- add -->
    <button id="btn-submit" type="submit">‚ûï Add</button>
  </fieldset>
</form>

<!-- TV/SHOW /TITLE -->
<form class="add" action="http://flip2.engr.oregonstate.edu:6548/add" method="post">
  <fieldset>
    <legend>Add New TV Show/Movie Here:</legend>
    {{#if notification}}
    <h1 style="text-align: center; color: red;">Add Successful!</h1>
    {{/if}}
    <input id="input-title" type="text" placeholder="Enter Title" name="title">
    <br>
    <input id="input-imdb" type="text" placeholder="Enter IMDB Score" name="score">
    <!-- multiple choices
  CREDIT:https://stackoverflow.com/questions/50895806/bootstrap-4-multiselect-dropdown -->
    <div id="type-select">
      <label for="types">Types (TV / Movie)</label>
      <select class="selectpicker" data-live-search="true" name="types">
        <option>Show</option>
        <option>Movie</option>
      </select>
    </div>

    <div id="stream-select">
      <label for="streams">Streaming Services</label>
      <select class="selectpicker" multiple data-live-search="true" name="streams">
        {{#each streams}}
        <option value="{{this.streamingServiceID}}">{{this.name}}</option>
        {{/each}}
        {{!-- <option value="1">Netflix</option>
        <option value="2">Hulu</option>
        <option value="3">Prime</option>
        <option value="4">Disney+</option> --}}
      </select>
    </div>

    <!-- submit -->
    <button id="btn-submit" type="submit">üìù Submit</button>
  </fieldset>
</form>

