<div id="resultTitle" class="titles">
    <div>
        <span class="results"><button type="submit" class="btn-save" onclick="sendTitle()">+</button>
            {{!-- <button class="btn-imdb" onclick="showIMDB('1')">IMDB</button>  --}}
            <input id="score" type="hidden" name="score" value={{score}}>
            <input id="title" type="hidden" name="title" value="{{title}}">

            <span class="title">{{title}}</span>|
            IMDB Score:
            <span class="score">{{score}}</span>
            |
            Available on:
            {{#each streams}}
            {{#if this.selected}}
            <input class="streamName" type="hidden" name="{{this.name}}" value={{this.streamingServiceID}}>
            <span class="{{this.name}}">{{this.name}}</span>
            {{/if}}
            {{/each}}
        </span>
    </div>
    <div id='1' class="hide">
        <p>This is where IMDB data will be displayed</p>
    </div>
</div>